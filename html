  <script>
    // WhatsApp handler
    function handleWhatsAppSubmit(form) {
      const name = form.name.value;
      const message = form.message.value;
      const url = `https://wa.me/6281234567890?text=${encodeURIComponent('Nama: ' + name + '\nPesan: ' + message)}`;
      window.open(url, '_blank');
      return false;
    }

    // Efek parallax scroll
    window.addEventListener('scroll', function () {
      const scrollTop = window.scrollY;
      const bg = document.querySelector('.parallax-bg');
      if (bg) {
        bg.style.transform = `translateY(${scrollTop * 0.5}px)`;
      }

      const heroGrid = document.querySelector('.hero-grid');
      const trigger = window.innerHeight / 1.3;
      if (heroGrid.getBoundingClientRect().top < trigger) {
        heroGrid.style.opacity = 1;
      }
    });
  </script>
